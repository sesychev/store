{
  "compilerOptions": {
    "target": "es6",
    "sourceMap": true,
    "watch": true,
    "module": "esnext",
    "rootDir": "./src/", 
    "outDir": "./dist/",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,   
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true, 
    "strict": true, 
    "skipLibCheck": true,
    "noImplicitThis": true
  }
}
